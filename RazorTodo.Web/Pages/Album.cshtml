@page
@using RazorTodo.Abstraction.Models
@model RazorTodo.Web.Pages.AlbumModel

@section Styles{
    <link rel="stylesheet" href="~/css/todo.css" asp-append-version="true">
    <style>
        .photo-wrapper-outer{
            position: relative;
            width: 100%;
            height: 0;
            padding-bottom: 100%;
        }

        .photo-wrapper-inner{
            position: absolute;
            top:0px;
            left:0px;
            right:0px;
            bottom:0px;
        }
    </style>
}

<h1 id="pageTitle">相簿</h1>
<div class="mdc-layout-grid">

    <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell--span-2-desktop
            mdc-layout-grid__cell--span-1-tablet
            mdc-layout-grid__cell--span-0-phone">
        </div>
        <div class="mdc-layout-grid__cell--span-8-desktop
            mdc-layout-grid__cell--span-6-tablet
            mdc-layout-grid__cell--span-4-phone">
            <button class="mdc-button mdc-button--raised" onclick="">
                <span class="mdc-button__ripple"></span>
                <span class="mdc-button__focus-ring"></span>
                <span class="mdc-button__label">上傳</span>
            </button>
            <label style="margin-left:10px;">共: @(Model.Photos?.Count) 張 </label>
        </div>        
    </div>

    <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell--span-3-desktop
            mdc-layout-grid__cell--span-4-tablet
            mdc-layout-grid__cell--span-4-phone">
            <div class="photo-wrapper-outer" style="background-color:red;">
                <div class="photo-wrapper-inner" style="background-color:green;">
                    
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        
    </script>
}

